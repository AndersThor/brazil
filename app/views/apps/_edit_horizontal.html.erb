<% form_for(app, :url => app_path(app)) do |f| %>
  <%= render :partial => 'shared/form_error', :locals => {:f => f} %>
  <div>
    <div class="span-4">
      <%= f.label :name %><br />
      <%= f.text_field :name, :class => 'span-4' %>
    </div>
    <div class="span-5">
      <%= f.label :vc_path, 'Version Control Path' %><br />
      <%= f.text_field :vc_path, :class => 'span-5' %>
    </div>
    <div class="span-3 last">
      <br />
      <%= f.submit 'Save' %><%= f.submit "Cancel", :name => 'cancel_edit_app_button', :class => 'form_close' %>
    </div>
  </div>
<% end %>