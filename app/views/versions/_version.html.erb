<div class="box version <%=h version.state %> clearfix">
  <div class="clearfix">
    <h2>Version</h2>

    <div class="span-6">
      <h3><%=h version %></h3>
      <span class="date">Last changed <%=h time_ago_in_words(version.updated_at) %> ago</span>
    </div>

    <div class="info span-3">
      <span><strong>Version</strong> <%=h version.schema_version %></span>
      <span><strong>State</strong> <%=h version.state %></span>
    </div>

    <div class="info span-4">
      <% for db_instance in version.db_instances %>
      <span class="db"><strong><%=h db_instance.db_env.capitalize %> Database</strong> <%=h db_instance %></span>
      <% end %>
      <span><strong>Schema</strong> <%=h version.schema %></span>
    </div>

    <div class="append-1">
      <ul class="actions">
        <li><%= link_to 'Show', app_activity_version_path(version.activity.app, version.activity, version) %></li>
        <% if version_created(version) %>
        <li><%= link_to 'Edit', edit_app_activity_version_path(version.activity.app, version.activity, version) %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <% if version_tested(version) %>
  <hr class="space" />
  <fieldset class="span-12 clearfix">
    <legend>Mark as Deployed</legend>
    <% form_for(version, :url => deployed_app_activity_version_path(version.activity.app, version.activity, version)) do |f| %>
      <%= f.hidden_field :state, :value => Version::STATE_DEPLOYED %>

      <div>
        <div class="span-5">
          <%= label_tag :vc_username, 'Version Control Username' %><br />
          <%= text_field_tag :vc_username, {}, :class => "span-5" %>
        </div>
        <div class="span-5">
          <%= label_tag :vc_password, 'Version Control Password' %><br />
          <%= password_field_tag :vc_password, {}, :class => "span-5" %>
        </div>
        <div class="span-1 last">
          <br />
            <%= f.submit 'Deployed' %>
        </div>
      </div>
    <% end %>
  </fieldset>
  <% end %>
</div>